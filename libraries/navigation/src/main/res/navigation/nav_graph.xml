<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_graph">

    <include app:graph="@navigation/home_graph" />

    <include app:graph="@navigation/recipes_graph" />

    <include app:graph="@navigation/recipe_details_graph" />

    <include app:graph="@navigation/ingredient_graph" />

    <include app:graph="@navigation/favourites_graph" />

    <action
        android:id="@+id/actionGlobalHomeFlow"
        app:destination="@id/home_graph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true"/>

    <action
        android:id="@+id/actionGlobalRecipesFlow"
        app:destination="@id/recipes_graph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true">
        <argument
            android:name="searchQuery"
            app:argType="string"
            android:defaultValue=""
            app:nullable="true" />
    </action>

    <action
        android:id="@+id/actionGlobalIngredientsFlow"
        app:destination="@id/ingredient_graph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true"/>

    <action
        android:id="@+id/actionGlobalFavouritesFlow"
        app:destination="@id/favourites_graph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true"/>

    <action
        android:id="@+id/actionRecipeDetailsFlow"
        app:destination="@id/recipe_details_graph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim">
        <argument
            android:name="mealId"
            app:argType="string"
            app:nullable="false" />
    </action>
</navigation>