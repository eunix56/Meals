<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Meals" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_colour</item>
        <item name="colorPrimaryVariant">@color/background_colour</item>
        <item name="colorOnPrimary">@color/text_colour</item>
    </style>


    <style name="HeaderTextView" parent="Theme.Meals">
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:lineSpacingExtra">@dimen/big_line_spacing</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="SmallHeaderTextView" parent="Theme.Meals">
        <item name="android:textSize">@dimen/small_big_text</item>
        <item name="android:lineSpacingExtra">@dimen/normal_line_spacing</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="SubHeaderTextView" parent="Theme.Meals">
        <item name="android:textSize">@dimen/small_big_text</item>
        <item name="android:lineSpacingExtra">@dimen/normal_line_spacing</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="NumberingTextView" parent="Theme.Meals">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:lineSpacingExtra">@dimen/normal_line_spacing</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="CategoryTextView" parent="Theme.Meals">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:lineSpacingExtra">@dimen/normal_line_spacing</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/text_colour</item>
    </style>

    <style name="CategoryMealTextView" parent="Theme.Meals">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:lineSpacingExtra">@dimen/normal_line_spacing</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/mini_text_colour</item>
    </style>

    <style name="SearchTextView" parent="Theme.Meals">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:lineSpacingExtra">@dimen/normal_line_spacing</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:editTextColor">@color/search_text_colour</item>
        <item name="android:textColorHint">@color/search_text_colour</item>
    </style>

    <style name="CardHeaderTextView" parent="Theme.Meals">
        <item name="android:textSize">@dimen/big_normal_text</item>
        <item name="android:textColor">@color/text_colour</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="RegularHeaderTextView" parent="Theme.Meals">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/text_colour</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="CardGreyTextView" parent="Theme.Meals">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/mini_text_colour</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MealTextView" parent="Theme.Meals">
        <item name="android:textSize">@dimen/big_header_text</item>
        <item name="android:lineSpacingExtra">@dimen/normal_line_spacing</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/mini_text_colour</item>
    </style>

    <style name="ChipCustomStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:lineSpacingExtra">@dimen/normal_line_spacing</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="ShapeAppearance.Image.ROUNDED" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>